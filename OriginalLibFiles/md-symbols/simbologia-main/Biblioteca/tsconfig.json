{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "noImplicitAny": false
    },
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}